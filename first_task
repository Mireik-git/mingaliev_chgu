#include <iostream>
#include <cmath>
#include <iomanip>  // Для форматированного вывода

using namespace std;

int main() {
    double L1, L2, L3;

    // Ввод длин сторон
    cout << "Введите длину первой стороны (L1): ";
    cin >> L1;

    cout << "Введите длину второй стороны (L2): ";
    cin >> L2;

    cout << "Введите длину третьей стороны (L3): ";
    cin >> L3;

    // Проверка на существование треугольника
    if (L1 + L2 <= L3 || L1 + L3 <= L2 || L2 + L3 <= L1) {
        cout << "Треугольник с такими сторонами не существует!" << endl;
        return 1;  // Завершаем программу с ошибкой
    }

    // Вычисление полупериметра
    double p = (L1 + L2 + L3) / 2;

    // Вычисление площади по формуле Герона
    double area = sqrt(p * (p - L1) * (p - L2) * (p - L3));

    // Вывод результата с точностью до 2 знаков после запятой
    cout << fixed << setprecision(2);
    cout << "Площадь треугольника: " << area << endl;

    return 0;
}
